{% extends "fr/layout.html.twig" %}

{% block title %}
	{{ parent() }} - Edit the advert
{% endblock %}

{% block flashes %}
	{% for message in app.flashes('aedit') %}
		<p class = 'flash_message'>{{ message|trans({}, 'flashes') }}</p>
	{% endfor %}
{% endblock %}

{% block content %}
	<fieldset>
		<legend><h2>Edit the advert : </h2></legend>
		{{ form(form) }}
	</fieldset>
{% endblock %}
